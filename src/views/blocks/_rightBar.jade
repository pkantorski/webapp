aside.disabled(data-ng-class="{'disabled': rightBar !== true}")
    .right-bar
        .element(data-ng-repeat="(key, value)  in markerDetail", data-ng-class="{'single': markerDetail.length === 1}", data-ng-click="showDescriptionFromList(value, key)")
            h2(data-ng-bind="value.name")
            .desc(data-ng-bind="value.description")
            button(data-ng-if="value.link", data-ng-click="showModal()") Open
    .show-filters.back(data-ng-if="showBackButton", data-ng-click="showAllMarker()")
        button.btn.btn-primary Wróć do pełnej listy
    .show-filters(data-ng-if="hideFilters", data-ng-click="showFilters()")
        button.btn.btn-primary Pokaż filtry